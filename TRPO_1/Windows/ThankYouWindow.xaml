<Window x:Class="TRPO_1.Windows.ThankYouWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TRPO_1.Windows"
        mc:Ignorable="d"
        Title="Спасибо за покупку" Height="500" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0">
            <Image x:Name="ProductImage"/>
        </DockPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="YesButton" Height="50" Width="100" Margin="10" Click="YesButton_OnClick">Да</Button>
            <Button x:Name="NoButton" Height="50" Width="100" Margin="10" Click="NoButton_OnClick">Нет</Button>
        </StackPanel>
    </Grid>
    
</Window>
